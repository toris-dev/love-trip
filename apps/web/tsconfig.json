{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lovetrip/shared": [
        "../../packages/shared"
      ],
      "@lovetrip/shared/*": [
        "../../packages/shared/*"
      ],
      "@lovetrip/ui": [
        "../../packages/ui"
      ],
      "@lovetrip/ui/*": [
        "../../packages/ui/*"
      ],
      "@lovetrip/api": [
        "../../packages/api"
      ],
      "@lovetrip/api/*": [
        "../../packages/api/*"
      ],
      "@lovetrip/user": [
        "../../packages/user"
      ],
      "@lovetrip/user/*": [
        "../../packages/user/*"
      ],
      "@lovetrip/couple": [
        "../../packages/couple"
      ],
      "@lovetrip/couple/*": [
        "../../packages/couple/*"
      ],
      "@lovetrip/planner": [
        "../../packages/planner"
      ],
      "@lovetrip/planner/*": [
        "../../packages/planner/*"
      ],
      "@lovetrip/recommendation": [
        "../../packages/recommendation"
      ],
      "@lovetrip/recommendation/*": [
        "../../packages/recommendation/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/@vitejs/**/*"
  ]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["react"],
    "baseUrl": ".",
    "paths": {
      "@lovetrip/shared": ["../shared"],
      "@lovetrip/shared/*": ["../shared/*"],
      "@lovetrip/api": ["../api"],
      "@lovetrip/api/*": ["../api/*"],
      "@lovetrip/ui": ["../ui"],
      "@lovetrip/ui/*": ["../ui/*"],
      "@lovetrip/gamification": ["../gamification"],
      "@lovetrip/gamification/*": ["../gamification/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}

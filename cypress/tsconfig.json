{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@lovetrip/shared": ["./packages/shared"],
      "@lovetrip/shared/*": ["./packages/shared/*"],
      "@lovetrip/ui": ["./packages/ui"],
      "@lovetrip/ui/*": ["./packages/ui/*"],
      "@lovetrip/api": ["./packages/api"],
      "@lovetrip/api/*": ["./packages/api/*"],
      "@lovetrip/user": ["./packages/user"],
      "@lovetrip/user/*": ["./packages/user/*"],
      "@lovetrip/couple": ["./packages/couple"],
      "@lovetrip/couple/*": ["./packages/couple/*"],
      "@lovetrip/planner": ["./packages/planner"],
      "@lovetrip/planner/*": ["./packages/planner/*"],
      "@lovetrip/recommendation": ["./packages/recommendation"],
      "@lovetrip/recommendation/*": ["./packages/recommendation/*"],
      "@lovetrip/gamification": ["./packages/gamification"],
      "@lovetrip/gamification/*": ["./packages/gamification/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}

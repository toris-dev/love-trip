{
  "name": "love-trip-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "lint:fix": "pnpm --filter web lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "pnpm --filter web type-check",
    "gen-types": "supabase gen types typescript --project-id dyomownljgsbwaxnljau > apps/web/src/lib/types/database.ts",
    "crawler": "pnpm --filter crawler start",
    "crawler:sync": "pnpm --filter crawler sync",
    "crawler:server": "pnpm --filter crawler run server",
    "crawler:sync-date-travel": "pnpm --filter crawler sync:date-travel",
    "test": "pnpm --filter web test",
    "test:ui": "pnpm --filter web test:ui"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  }
}
